{
  "name": "datatrace",
  "version": "1.0.0",
  "description": "Privacy Data Removal Service - Search and remove personal data from Telegram bot services",
  "main": "index.js",
  "scripts": {
    "dev": "docker-compose up -d",
    "build": "cd backend && npm install && npm run build",
    "start": "cd backend && npm start",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start:docker": "docker-compose -f docker-compose.prod.yml up -d",
    "stop": "docker-compose down",
    "test": "./scripts/test-all.sh",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "deploy": "./scripts/deploy.sh",
    "optimize": "./scripts/optimize.sh",
    "install:all": "npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "clean": "docker system prune -f && npm run clean:backend && npm run clean:frontend",
    "clean:backend": "cd backend && rm -rf node_modules dist",
    "clean:frontend": "cd frontend && rm -rf node_modules build",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "format": "npm run format:backend && npm run format:frontend",
    "format:backend": "cd backend && npm run format",
    "format:frontend": "cd frontend && npm run format"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nik-Maltcev/datatrace.git"
  },
  "keywords": [
    "privacy",
    "data-removal",
    "telegram-bots",
    "personal-data",
    "gdpr",
    "data-protection",
    "search",
    "removal-service",
    "typescript",
    "react",
    "nodejs",
    "express"
  ],
  "author": "Nik Maltcev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Nik-Maltcev/datatrace/issues"
  },
  "homepage": "https://github.com/Nik-Maltcev/datatrace#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}