# Production Environment Variables for Privacy Data Removal Service Backend

# Application Settings
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://yourdomain.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_ROTATION_ENABLED=true

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_INTERVAL=60000
ALERTS_ENABLED=true
METRICS_RETENTION_DAYS=30

# Performance Thresholds
CPU_WARNING_THRESHOLD=70
CPU_CRITICAL_THRESHOLD=90
MEMORY_WARNING_THRESHOLD=80
MEMORY_CRITICAL_THRESHOLD=95
RESPONSE_TIME_WARNING_THRESHOLD=2000
RESPONSE_TIME_CRITICAL_THRESHOLD=5000
ERROR_RATE_WARNING_THRESHOLD=5
ERROR_RATE_CRITICAL_THRESHOLD=10

# Security Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ENABLE_CORS=true
CORS_ORIGIN=https://yourdomain.com
ENABLE_HELMET=true
ENABLE_PII_SANITIZATION=true
ENABLE_MEMORY_CLEANUP=true
ENABLE_DATA_ENCRYPTION=true
ENABLE_ADVANCED_RATE_LIMIT=true
ENABLE_THREAT_DETECTION=true
ENABLE_SECURITY_HEADERS=true

# API Keys (REQUIRED - Replace with actual values)
DYXLESS_API_KEY=your_dyxless_api_key_here
ITP_API_KEY=your_itp_api_key_here
LEAK_OSINT_API_KEY=your_leak_osint_api_key_here
USERBOX_API_KEY=your_userbox_api_key_here
VEKTOR_API_KEY=your_vektor_api_key_here

# API Endpoints (Optional - Use defaults if not specified)
DYXLESS_API_URL=https://api-dyxless.cfd/query
ITP_API_URL=https://datatech.work/public-api/data/search
LEAK_OSINT_API_URL=https://leakosintapi.com
USERBOX_API_URL=https://api.usersbox.ru/v1/search
VEKTOR_API_URL=https://infosearch54321.xyz/api

# API Configuration
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000

# Database Configuration (if using database)
# DATABASE_URL=postgresql://username:password@localhost:5432/privacy_db
# DATABASE_POOL_SIZE=10
# DATABASE_TIMEOUT=30000

# Redis Configuration (if using Redis)
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password
# REDIS_DB=0
# REDIS_TIMEOUT=5000

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
# FROM_EMAIL=noreply@yourdomain.com

# External Services
# SENTRY_DSN=https://your_sentry_dsn_here
# ANALYTICS_API_KEY=your_analytics_key_here

# SSL/TLS Configuration
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
# SSL_CA_PATH=/path/to/ca.pem

# Backup Configuration
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30
# BACKUP_STORAGE_PATH=/app/backups

# Feature Flags
ENABLE_SEARCH_CACHING=true
ENABLE_RESULT_AGGREGATION=true
ENABLE_BOT_NAME_ENCRYPTION=true
ENABLE_DETAILED_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_RECOVERY=true

# Development/Debug (Should be false in production)
DEBUG_MODE=false
ENABLE_DEBUG_ROUTES=false
ENABLE_TEST_ENDPOINTS=false
VERBOSE_LOGGING=false